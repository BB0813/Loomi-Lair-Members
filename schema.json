{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Loomi Lair Member Schema",
    "type": "object",
    "required": [
        "id",
        "name",
        "intro",
        "avatar",
        "links"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$",
            "description": "Unique lowercase identifier"
        },
        "name": {
            "type": "string",
            "description": "Display name"
        },
        "intro": {
            "type": "string",
            "description": "Short personal introduction"
        },
        "avatar": {
            "type": "string",
            "format": "uri",
            "description": "Avatar image URL"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Skill or interest tags"
        },
        "links": {
            "type": "object",
            "required": [
                "github"
            ],
            "additionalProperties": {
                "type": "string",
                "format": "uri"
            },
            "description": "Map of platform name â†’ URL (must include github)"
        }
    },
    "additionalProperties": false
}
